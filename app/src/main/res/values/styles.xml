<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Light" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">#ffffff</item>
        <item name="android:windowAnimationStyle">@style/ActivityTransitions</item>
        <item name="actionOverflowButtonStyle">@style/OverFlow</item>
    </style>

    <style name="Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorAccent">#ffffff</item>
        <item name="android:windowAnimationStyle">@style/ActivityTransitions</item>
        <item name="actionOverflowButtonStyle">@style/OverFlow</item>
    </style>

    <style name="ActivityTransitions" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@android:anim/fade_in</item>
        <item name="android:activityOpenExitAnimation">@android:anim/fade_out</item>
        <item name="android:activityCloseEnterAnimation">@android:anim/fade_in</item>
        <item name="android:activityCloseExitAnimation">@android:anim/fade_out</item>

        <item name="android:fragmentOpenEnterAnimation">@android:anim/fade_in</item>
        <item name="android:fragmentOpenExitAnimation">@android:anim/fade_out</item>
        <item name="android:fragmentCloseEnterAnimation">@android:anim/fade_in</item>
        <item name="android:fragmentCloseExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="OverFlow" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_more_vert_white_48px</item>
    </style>

    <style name="DialogActivity" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DialogActivityDark" parent="@style/Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>